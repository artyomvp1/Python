# Устанавливаем pypyodbc

import pypyodbc
mysqlserver = 'ARTEMPAK-PC\SQLEXPRESS'
mydatabase = 'AdventureWorks2014'
connection = pypyodbc.connect('Driver={SQL Server};'
                              'Server=' + mysqlserver + ';'
                              'Database=' + mydatabase + ';'
                              #'uid=username;'
                              #'pwd=mypassword;'
                             )

cursor = connection.cursor()    # Бегунок

mysqlquery = ("""
                SELECT LoginID, JobTitle 
                  FROM HumanResources.Employee
                 WHERE MaritalStatus = 'S'
                   AND JobTitle like 'Marketing%'
              """)

cursor.execute(mysqlquery)   # Курсор указывает на начало?

results = cursor.fetchall()  # Выгрясти всё??????????????????????????????????

for i in results:            # Выглядит как СЛОВАРЬ?
    LoginID = i[0]
    JobTitle = i[1]
    print(LoginID + ' becomes a ' + JobTitle)

connection.close()  # !
